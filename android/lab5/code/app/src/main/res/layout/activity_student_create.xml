<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="500dp">


    <LinearLayout
        android:id="@+id/create_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:text="Name student"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:text="Surname student"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:text="Born date student"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:text="Faculties student"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <AutoCompleteTextView
            android:id="@+id/create_faculty_auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:text="Group student"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <AutoCompleteTextView
            android:id="@+id/create_group_auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:verticalSpacing="46dp"
            android:gravity="center"
            android:shadowColor="#7F000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="11"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_light"
            android:onClick="onButtonClick"
            android:text="Create student"
            android:textColor="@android:color/background_dark" />

    </LinearLayout>
</RelativeLayout>